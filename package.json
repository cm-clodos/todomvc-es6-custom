{
  "name": "todomvc-es6-custom",
  "version": "1.0.0",
  "description": "Simple TodoMVC Application with vanilla ES6",
  "author": "Ueli Kunz <kunz@ideadapt.net>",
  "license": "MIT",
  "scripts": {
    "dev": "npx rimraf .parcel-cache && npx parcel self/app/index.html",
    "start:ci": "npm run build && npx http-server dist --port 1234",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "npx mocha self/test/unit/**.mjs",
    "test:e2e": "npx mocha self/test/e2e/*.test.mjs --timeout 5000",
    "build": "npx rimraf dist .parcel-cache && npx parcel build self/app/index.html"
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "devDependencies": {
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chromedriver": "100.0.0",
    "crypto-browserify": "^3.12.0",
    "eslint": "6.7.2",
    "events": "^3.3.0",
    "https-browserify": "^1.0.0",
    "mocha": "8.4.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "selenium-webdriver": "4.1.1",
    "sinon": "7.5.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.0",
    "util": "^0.12.4"
  },
  "dependencies": {
    "he": "1.2.0",
    "http-server": "0.12.3",
    "parcel": "2.4.1",
    "rimraf": "3.0.2",
    "todomvc-app-css": "2.3.0"
  }
}
